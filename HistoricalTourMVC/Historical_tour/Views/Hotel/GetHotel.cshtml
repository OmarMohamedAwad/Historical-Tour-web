@model HistoricTour.Models.hotelClass
<!DOCTYPE html>
@{
    Layout = "~/Views/Shared/_LayoutNav_Side.cshtml";
}

<html>
<head>
    <title>Historical Tour</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" type="text/css" href="~/Content/Hotels-item-style.css" />

</head>
<body>


    <!-- Start Slider  -->

    <div style="margin-right:5%; margin-left:5%;">

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>

            </ol>
            <div class="carousel-inner">
                
                @for (int i = 0; i < Model.Images.Count; i++)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" height="500" src=@Model.Images[i].Image alt=@("slide"+i)>
                            <div class="placescaption carousel-caption">
                                <h1>@Model.Name</h1>
                                <p>
                                    @Model.Descrption
                                </p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" height="500" src=@Model.Images[i].Image alt=@("slide"+i)>
                            <div class="placescaption carousel-caption">
                                <h1>@Model.Name</h1>
                                <p>
                                    @Model.Descrption
                                </p>
                            </div>
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <!-- End Slider  -->
    <!-- start tabs -->
    <section class="tabss text-center">

        <ul class="nav nav-tabs" id="myTab" role="tablist" style="background-color:white;">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Description</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Location</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Video</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent" style="background-color:#fafcfa;">

            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab" style="word-wrap: break-word; padding:10px; ">
                <div>
                    @Model.Descrption  @Model.Descrption  @Model.Descrption @Model.Descrption <br />  @Model.Descrption  @Model.Descrption

                    @Model.Descrption  @Model.Descrption  @Model.Descrption
                </div>

            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                <div style="float:left; color:#CDCBCB;">Giza Hotel </div>
                <div id="map"></div>
            </div>

            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                <iframe width="100%" height="300" src=@("https://www.youtube.com/embed/"+@Model.VideoKey)>
                    <!-- لل اوتو عشان متتقمصش = ?autoplay=1 -->
                </iframe>
            </div>
        </div>
    </section>

    <!-- End tabs -->
    <!-- Start sevices Section-->

    <section class=" servsec text-center">
        <div class="data">
            <div class="container">
                <div class="fourserv row">

                    <div class="col special">
                        <div>
                            <i class="fa fa-wheelchair fa-5x"></i> <br> <br>
                            <span class="services">Special care</span>
                        </div>
                    </div>

                    <div class="col wifi">
                        <div>
                            <i class="fa fa-wifi fa-5x"></i> <br> <br>
                            <span class="services">Free WI_FI</span>
                        </div>
                    </div>

                    <div class="col nights">
                        <div>
                            <i class="fa fa-bed fa-5x"></i>   <br> <br>
                            <span class="services">Comfortable nights</span>
                        </div>
                    </div>

                    <div class="col helicop">
                        <div>
                            <i class="fa fa-plane fa-5x"></i>


                            <br> <br>
                            <span class="services">Helicopter service</span>
                        </div>
                    </div>

                </div>



                <div class="twobtn">
                    <button class="btn btn-warning" style="font-size: inherit;font-weight: 600;">BOOK NOW</button>
                </div>

            </div>
        </div>
    </section>
    <!-- End sevices Section-->

    <script>
function openNav() {
    document.getElementById("sidebar").style.width = "250px";
    document.getElementById("main").style.marginLeft = "250px";
}

function closeNav() {
    document.getElementById("sidebar").style.width = "0";
    document.getElementById("main").style.marginLeft= "0";
}


    </script>

    <script>
    function initMap() {
        var lt=@Model.latidue;
        var lg=@Model.longtude;
        var uluru = {lat: lt, lng:lg};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 4,
          center: uluru
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAGhWwuCRkZQjIvqMbxh5fLIq3jzQ-ncHc&callback=initMap">
    </script>





</body>
</html>