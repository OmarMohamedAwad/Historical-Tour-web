@{
    Layout = "~/Views/Shared/_LayoutNav.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <title>Historical Tour</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" type="text/css" href="~/Content/sign-book-style.css" />
</head>
<body>
    
    <!-- start Booking -->

    <section>

        <div class="container h-100">
            <div class="row h-100 justify-content-center align-items-center">
                <div class="col-lg-6 col-xs-10">
                    <div class="from-box ">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>Booking Now</h3>
                                <p>Enter your information to book:</p>
                            </div>
                            <div class="form-top-right">
                                <i class="far fa-address-book"></i>
                            </div>
                        </div>
                        <div class="form-bottom text-center">
                            <form role="form" action="" method="" class="login-form">
                                <div class="form-group">
                                    <label class="sr-only" for="form-name">Name</label>
                                    <select name="form-name" class="selectpicker">
                                        <option selected="selected">Hotel Name</option>
                                        <option>Four Sesoon</option>
                                        <option>Four Sesoon</option>
                                    </select>
                                </div>
                                <div class="form-group" ]>
                                    <label class="sr-only" for="form-type">Type</label>
                                    <select name="form-type" class="selectpicker">
                                        <option selected="selected">Location</option>
                                        <option>Cairo</option>
                                        <option>Alex</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="form-data">Date</label>
                                    <input name="form-data" type="date" class="form-control" placeholder="Date">
                                </div>

                                <div class="form-group" ]>
                                    <label class="sr-only" for="form-time">Time</label>
                                    <select name="form-time" class="selectpicker">
                                        <option selected="selected">Time</option>
                                        <option>1:00am-2:00pm</option>
                                        <option>1:00am-2:00pm</option>
                                        <option>1:00am-6:00pm</option>
                                        <option>1:00am-8:00pm</option>
                                    </select>
                                </div>

                                <button type="submit" class="btn btn-warning">Booking Now</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>

    <!--end Booking -->

</body>
</html>
