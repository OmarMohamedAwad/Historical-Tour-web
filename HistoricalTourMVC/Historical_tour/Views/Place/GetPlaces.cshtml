                </div>



                <div class="col-lg-3 col-md-6 col-sm-6 mb-6">
                    <div class="dropdown show">
                        <a class="dropdown-toggle btn" href="#" role="button" id="dropdownMenuLink" style="border: 2px solid #F7B700; width: 100%;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Type
                        </a>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" style="width:100%; margin:auto; text-align:center;">
                            <a class="dropdown-item" href="#">Single</a>
                            <a class="dropdown-item" href="#">Family</a>
                        </div>
                    </div>
                </div>


                <div class="col-lg-3 col-md-6 col-sm-6 mb-6">
                    <div class="dropdown show">
                        <a class="dropdown-toggle btn" href="#" role="button" id="dropdownMenuLink" style="border: 2px solid #F7B700; width: 100%;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Weather
                        </a>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" style="width:100%; margin:auto; text-align:center;">
                            <a class="dropdown-item" href="#">COLD</a>
                            <a class="dropdown-item" href="#">HOT</a>
                            <a class="dropdown-item" href="#">NORMAL</a>

                        </div>
                    </div>
                </div>

            </div>

        </div>
    </section>

    <!--End Section Filter-->

    <!--Start Section Plces-->

    <div class="content">
        <section class="places">
            <div class="container">

                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="row text-center">

                        @for (int j = 0; j < Model.ElementAt(i).Count; j++)
                        {

                            if (Model.ElementAt(i).Count == 4)
                            {
                                
                                try
                                {
                                    <div class="col-lg col-md-5 col-sm-5 mr-3 mb-3 alazhar" style="background-image: url(@(Model.ElementAt(i).ElementAt(j).Images[0].Image))">
                                        <div class="container_place">
                                            <div>
                                                <img src="@Model.ElementAt(i).ElementAt(j).Images[0].Image" />
                                            </div>
                                            <div>
                                                <p>
                                                    @Model.ElementAt(i).ElementAt(j).Name <br/>
                                                </p>
                                            </div>
                                            <div>
                                                <p>
                                                    Location: @Model.ElementAt(i).ElementAt(j).Location<br />
                                                    Rate&ensp;&ensp;: @Model.ElementAt(i).ElementAt(j).Rate
                                                </p>
                                            </div>
                                            <div>
                                                <button class="btn btn-warning ">@Html.ActionLink("See More", "GetPlace" + "\\" + @Model.ElementAt(i).ElementAt(j).Id) </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                                catch
                                {
                                    <div class="col-lg col-md-5 col-sm-5 mr-3 mb-3 alazhar">
                                        <div class="container_place">
                                            <img src="~/image/pouplar/Al-Azhar-Mosque.png" />
                                            <p>
                                                @Model.ElementAt(i).ElementAt(j).Name <br />
                                            </p>
                                            <p>
                                                Location: @Model.ElementAt(i).ElementAt(j).Location<br />
                                                Rate&ensp;&ensp;: @Model.ElementAt(i).ElementAt(j).Rate
                                            </p>

                                            <button class="btn btn-warning ">@Html.ActionLink("See More", "GetPlace" + "\\" + @Model.ElementAt(i).ElementAt(j).Id) </button>
                                        </div>
                                    </div>
                                }

                            }
                            else
                            {
                                try
                                {
                                    <div class="col-lg-3 col-md-5 col-sm-5 mr-3 mb-3 alazhar" style="background-image: url(@(Model.ElementAt(i).ElementAt(j).Images[0].Image))">
                                        <div class="container_place">
                                            <div>
                                                <img src="@Model.ElementAt(i).ElementAt(j).Images[0].Image" />
                                            </div>
                                            <div>
                                                <p>
                                                    @Model.ElementAt(i).ElementAt(j).Name <br />
                                                </p>
                                            </div>
                                            <div>
                                                <p>
                                                    Location: @Model.ElementAt(i).ElementAt(j).Location<br />
                                                    Rate&ensp;&ensp;: @Model.ElementAt(i).ElementAt(j).Rate
                                                </p>
                                            </div>
                                            <div>
                                                <button class="btn btn-warning ">@Html.ActionLink("See More", "GetPlace" + "\\" + @Model.ElementAt(i).ElementAt(j).Id) </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                                catch
                                {
                                    <div class="col-lg-3 col-md-5 col-sm-5 mr-3 mb-3 alazhar">
                                        <div class="container_place">
                                            <img src="~/image/pouplar/Al-Azhar-Mosque.png" />
                                            <p>
                                                @Model.ElementAt(i).ElementAt(j).Name <br />
                                            </p>
                                            <p>
                                                Location: @Model.ElementAt(i).ElementAt(j).Location<br />
                                                Rate&ensp;&ensp;: @Model.ElementAt(i).ElementAt(j).Rate
                                            </p>

                                            <button class="btn btn-warning ">@Html.ActionLink("See More", "GetPlace" + "\\" + @Model.ElementAt(i).ElementAt(j).Id) </button>
                                        </div>
                                    </div>
                                }
                            }

                        }

                    </div>
                }

            </div>
        </section>
    </div>

