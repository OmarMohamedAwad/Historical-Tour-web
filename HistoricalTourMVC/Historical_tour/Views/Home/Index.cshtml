@model  List< object >
@{ 
    List<HistoricTour.Models.placeClass> places = Model[0] as List<HistoricTour.Models.placeClass>;
    List<HistoricTour.Models.hotelClass> hotels = Model[1] as List<HistoricTour.Models.hotelClass>;
    List<Historical_tour.Models.TourGuide> tourguides = Model[2] as List<Historical_tour.Models.TourGuide>;
}
<!DOCTYPE html>
<html>
<head>
    <title>Historical Tour</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>
<body>
    <!--Start Carousel-->

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" height="600" src="~/image/slider/slider4.jpg" alt="First slide">
                <div class="carousel-caption hidden-xs">
                    <h1>The historical places in Egypt</h1>
                    <p>
                        Together with the most engaging designer of today, we create original product of high quality, at great prices.
                    </p>
                    <button class="btn btn-warning">Discovery</button>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" height="600" src="~/image/slider/slider6.jpg" alt="Second slide">
                <div class="carousel-caption hidden-xs">
                    <h1>The historical places in Egypt</h1>
                    <p>
                        Together with the most engaging designer of today, we create original product of high quality, at great prices.
                    </p>
                    <button class="btn btn-warning">Discovery</button>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" height="600" src="~/image/slider/slider5.jpg" alt="Third slide">
                <div class="carousel-caption hidden-xs">
                    <h1>The historical places in Egypt</h1>
                    <p>
                        Together with the most engaging designer of today, we create original product of high quality, at great prices.
                    </p>
                    <button class="btn btn-warning">Discovery</button>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!--End Carousel-->
    <!--Start Popular places -->

    <section class="popular_places text-center">
        <div class="container">
            <a><h2>Popular Places</h2></a>
            <div class="row text-center">

                @foreach (var place in places)
                {

                    <div class="col-lg col-md-5 col-sm mr-5 mb-3">
                        <div style="height: 50%; margin-bottom: 10px; ">
                            @try
                            {
                                <img src="@(place.Images[0].Image)" />
                            }
                            catch
                            {
                                <img src="~/image/pouplar/Al-Azhar-Mosque.png" />
                            }
                        </div>
                        <div style="height:20%">
                            <h4 style="font-size:1.4rem">@place.Name</h4>
                            
                        </div>
                        <div style="height: 20%">
                            <p>Location: @place.Location</p>
                            <button class="btn btn-warning"> <a href="/Place/Getplace/@place.Id">See More</a></button>
                        </div>
                        </div>


                }

            </div>

        </div>
    </section>

    <!--End Popular places -->

    <!--Start Popular Hotels -->

    <section class="popular-hotels">
        <button class="btn hotels-btn">Popular Hotels</button>
        <div class="container">
            <div class="row text-center">
                <div class="col-md-6 mb-5">
                    <a href="#">

                        @try
                        {
                            <img src="@hotels[0].Images[0].Image" class="hotel-img"/>
                        }
                        catch
                        {
                            <img src="~/image/hotel/hotel1.jpg" class="hotel-img"/>
                        }
                        <h5>@hotels[0].Name</h5>
                        <p>Location: @hotels[0].Location</p>
                    </a>
                    <button class="btn btn-dark mb-5"><a href="/Hotel/Gethotel/@hotels[0].Id">See More</a></button>
                </div>
                <div class="col-md-6 mb-3">
               
                    <div class="row">
                    @for (int j = 1; j <= 4; j++)
                    {
                        <div class="col-md-6">
                            <div style="height: 55%; margin-bottom: 10px; ">
                                @try
                                {
                                    <img src="@hotels[j].Images[0].Image" />
                                }
                                catch
                                {
                                    <img src="~/image/hotel/hotel1.jpg" />
                                }
                            </div>
                            <div style="height: 10%; margin-top: 20px;">
                                <h6>@hotels[j].Name</h6>
                            </div>
                            <div style="height: 10%; margin-bottom: 10px; margin-top: 5px;">
                                <p>Location: @hotels[j].Location</p>
                                <button class="btn btn-dark"><a href="/Hotel/Gethotel/@hotels[j].Id">See More</a></button>
                            </div>
                            </div>
                    }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--End Popular Hotels -->

    <!--Start Popular Tour Guide -->

    <section class="tour-guide">
        <div class="container">
            <h3 class="text-center">Our Tour Guide</h3>
            <div class="row text-center">
                
                @foreach (var tourguide in tourguides)
                {
                    <div class="col-lg col-md-5 col-sm-5 mr-3 mb-3">
                        <div style="height: 40%; margin-bottom:20px ">
                            @try
                            {
                                <img src="@tourguide.Image"/>
                            }
                            catch
                            {
                                <img src="~/image/tour guides/tourguide1.png"/>
                            }
                        </div>
                        <div style="height:20%">
                            <p>
                                @tourguide.Name
                            </p>
                            <p>
                                Address: @tourguide.Address <br/>
                                Language : Arabic/English
                            </p>
                        </div>
                        <div style="height:20%">
                            <div class="media-tour">
                                <a><i class="fab fa-facebook-square fa-2x"></i></a>
                                <a><i class="fab fa-twitter-square fa-2x"></i></a>
                                <a><i class="fas fa-phone-square fa-2x"></i></a>
                                <a><i class="fab fa-snapchat-square fa-2x"></i></a>
                            </div>
                            <button class="btn btn-warning"><a href="/TourGuide/GetTourguide/@tourguide.ID">See More</a></button>
                            <button class="btn btn-warning"><a href="/TourGuide/booking/@tourguide.ID">Booking</a></button>
                        </div>
                    </div>
                }


            </div>
        </div>
    </section>

    <!--End Popular Tour Guide-->
    
</body>
</html>


